<%= form_for(@quotes,url: choose_new_or_edit) do |f| %>
  
  <% if @quotes.errors.any? %>
    <div id="error_explanation">

      <h2><%= @quotes.errors.count %> piace of errors have found</h2>

      <ul>
      <% @quotes.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control'  %>
  <br>
  <%= f.submit 'Quote', class: 'btn btn-primary btn-block'  %>
<% end %>

<%= link_to "Home", quotes_path %>